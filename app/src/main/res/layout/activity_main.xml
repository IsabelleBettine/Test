<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--ocupa a tela do usuário-->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <TextView
           android:id="@+id/tituloMain"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Mes/Ano"
           android:layout_gravity="center"
           android:textSize="32dp"
           android:layout_marginTop="40dp"
           android:layout_marginBottom="70dp"/>

       <!--bloco lógico para o centro da tela
       botão de entrada, TextView, botao de saida-->
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_gravity="center">


           <!--adicionado botao de entrada-->
           <ImageButton
               android:id="@+id/entradaBotton"
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:background="@mipmap/soma"
               android:layout_gravity="center"
               android:layout_marginRight="20dp"/>

            <!--bloco lógico para organizar os TextView-->
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <!--informacao da entrada-->
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginBottom="70dp">
                   <TextView
                       android:id="@+id/entradaText"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Entradas: $"
                       android:textSize="21dp"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="0,00"
                       android:textSize="21dp"
                       android:layout_marginLeft="4dp"/>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_gravity="center"
                   android:layout_marginBottom="70dp">


                   <TextView
                       android:id="@+id/saidaText"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Saídas: $"
                       android:textSize="21dp"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="0,00"
                       android:textSize="21dp"
                       android:layout_marginLeft="4dp"/>
               </LinearLayout>

                   <!--informacao do saldo do mes corrente-->
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:layout_gravity="center">

                       <TextView
                           android:id="@+id/saldoText"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Saldo: $"
                           android:textSize="21dp"/>/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="0,00"
                           android:textSize="21dp"
                           android:layout_marginLeft="4dp"/>

                   </LinearLayout>
               </LinearLayout>

           <!--adicionado botao de saida-->
           <ImageButton
               android:id="@+id/saidaBottom"
               android:layout_width="70dp"
               android:layout_height="70dp"
                android:background="@mipmap/sub"
               android:layout_gravity="center"
               android:layout_marginLeft="20dp"/>

       </LinearLayout>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginLeft="55dp"
           android:layout_marginRight="15dp"
           android:layout_marginTop="75dp">

        <Button
            android:id="@+id/anteriorBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anterior"
            android:layout_weight="1"/>
           <Button
               android:id="@+id/proximoBottom"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Próximo"
               android:layout_weight="1"/>
           <Button
               android:id="@+id/novoBottom"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Novo"
               android:layout_weight="1"/>

       </LinearLayout>

   </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>